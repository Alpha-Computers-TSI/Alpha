<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@android:color/black">

    <!-- Fundo preto (Background) -->
    <View
        android:id="@+id/background_barra"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Barra de pesquisa -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_search_background"
        android:focusable="false"
        android:iconifiedByDefault="false"
        android:queryHint="Pesquisar..."
        android:textColor="@color/black"
        android:textColorHint="#A1A1A1"
        app:layout_constraintBottom_toBottomOf="@+id/background_barra"
        app:layout_constraintEnd_toStartOf="@+id/cart_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_barra" />

    <!-- Ícone do carrinho -->
    <ImageView
        android:id="@+id/cart_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:src="@drawable/carrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_barra"
        app:layout_constraintBottom_toBottomOf="@+id/background_barra" />

</androidx.constraintlayout.widget.ConstraintLayout>