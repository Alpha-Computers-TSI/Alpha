<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myOrdersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9F9"
        tools:context=".ProductCart">


        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="406dp"
            android:layout_height="41dp"
            android:layout_marginTop="28dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:rotationY="180"
                app:srcCompat="@drawable/truckicon"
                app:tint="#34C9FF" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:text="Frete (2 dias úteis):"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Grátis!"
                android:textColor="#34C9FF"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Carrinho"
            android:textColor="#34C9FF"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="@+id/toolbar2"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="43dp"
            android:layout_height="34dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:foregroundTint="#34C9FF"
            android:rotationY="-181"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow"
            app:tint="#34C9FF" />

        <Button
            android:id="@+id/goToPaymentButton"
            android:layout_width="349dp"
            android:layout_height="56dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#34C9FF"
            android:text="IR PARA O PAGAMENTO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout14"
            android:layout_width="412dp"
            android:layout_height="195dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar2">

            <LinearLayout
                android:id="@+id/linearLayout12"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="39dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/location_icon"
                    app:tint="#34C9FF" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informe seu endereço"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout13"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="Insira seu CEP"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColorHint="#4E4E4E" />

                <Button
                    android:layout_width="123dp"
                    android:layout_height="48dp"
                    android:backgroundTint="#34C9FF"
                    android:text="OK"
                    app:cornerRadius="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Não lembro meu CEP"
                android:textColor="#34C9FF" />

        </LinearLayout>

        <!-- Layout alternativo para quando o carrinho estiver vazio -->


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="294dp"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="411dp"
                android:layout_height="54dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="28dp"
                    android:layout_height="27dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/doc_svg"
                    app:tint="#34C9FF" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESUMO DO PEDIDO"
                    android:textColor="#34C9FF"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Valor dos Produtos"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/productsValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0,00"
                    android:textColor="#000000" />
            </RelativeLayout>

            <View
                android:layout_width="355dp"
                android:layout_height="1dp"
                android:background="#373737" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Frete"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Grátis"
                    android:textColor="#000000" />

            </RelativeLayout>

            <View
                android:layout_width="355dp"
                android:layout_height="1dp"
                android:background="#373737" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Total do Pedido"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0,00"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </RelativeLayout>


            <View
                android:layout_width="355dp"
                android:layout_height="1dp"
                android:background="#373737" />

            <TextView
                android:id="@+id/parcelamentoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Parcelamento"
                android:textColor="#000000" />

        </LinearLayout>

        <Button
            android:id="@+id/goToListagemProdutos"
            android:layout_width="349dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="68dp"
            android:backgroundTint="#00FFFFFF"
            android:text="CONTINUAR COMPRANDO"
            android:textColor="#34C9FF"
            android:textStyle="bold"
            app:cornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goToPaymentButton"
            app:strokeColor="#34C9FF"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF" />

            <LinearLayout
                android:id="@+id/emptyCartLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:srcCompat="@drawable/empty_cart" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Seu carrinho está vazio"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="261dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Adicione produtos ao carrinho antes de prosseguir para a finalização de compra."
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/productListBtn"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#34C9FF"
                    android:text="Comece Já"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    app:cornerRadius="4dp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>