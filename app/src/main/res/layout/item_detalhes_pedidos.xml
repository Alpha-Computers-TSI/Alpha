<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/produtoImagem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textViewNomeProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Nome do Produto"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/produtoImagem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewDescricaoProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Descrição do Produto"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/textViewNomeProduto"
        app:layout_constraintTop_toBottomOf="@id/textViewNomeProduto"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewPrecoProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Preço do Produto"
        android:textSize="14sp"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintStart_toStartOf="@id/textViewDescricaoProduto"
        app:layout_constraintTop_toBottomOf="@id/textViewDescricaoProduto"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>